extends ../base
block title
	| Index page
block main
	section.top-section
		.container
			.row
				.top-section__title
					h1
						span ФУНКЦИОНАЛЬНЫЕ
						|  ЛЕНДИНГИ НА ЗАКАЗ
					p для максимального удобства
				.top-section__bot-txt
					p.sticky Более
						span  400
						|   довольных клиентов за
						span  8 лет
						|  успешной работы!
				.top-section__circle
					include ../../img/svg_circle.svg
	// Секция  our_advantages
	section#our_advantages.our_advantages
		.container
			.title
				h2 Наши преимущества
				img(src=require("../../img/garant.svg"))
			.row
				.our_advantages_item.col-lg-4.col-md-6
					.our_advantages_item_img
						i.fa.fa-users
					h3 Заголовок
					p Индивидуальный подход к каждому клиенту
				.our_advantages_item.col-lg-4.col-md-6
					.our_advantages_item_img
						i.fa.fa-diamond
					h3 Заголовок
					p Неповторимость и практичность каждого проекта мебели
				.our_advantages_item.col-lg-4.col-md-6
					.our_advantages_item_img
						i.fa.fa-list-ol
					h3 Заголовок
					p Многообразие материалов и стилевых решений
				.our_advantages_item.col-lg-4.col-md-6
					.our_advantages_item_img
						i.fa.fa-pencil
					h3 Заголовок
					p Для вас бесплатно: замер, дизайн-проект, доставка и монтаж
				.our_advantages_item.col-lg-4.col-md-6
					.our_advantages_item_img
						i.fa.fa-credit-card-alt
					h3 Заголовок
					p Возможность оформления мебели в кредит
				.our_advantages_item.col-lg-4.col-md-6
					.our_advantages_item_img
						i.fa.fa-wrench
					h3 Заголовок
					p Изготовление мебели только из высококачественных материалов
	// Тест react
	section.react
		.container
			#app
	// Секция main_content
	section.main_content
		.container
			div Пример checkbox
			label.check.noselect
				input(type='checkbox')
				i.fa.fa-1.fa-square-o
				i.fa.fa-2.fa-check-square-o
				span первый чек
			label.check.noselect
				input(type='checkbox')
				i.fa.fa-1.fa-square-o
				i.fa.fa-2.fa-check-square-o
				span второй чек
			div Пример radio button
			label.radio.noselect
				input(type='radio', name='radio')
				i.fa.fa-1.fa-square-o
				i.fa.fa-2.fa-check-square-o
				span первый чек
			label.radio.noselect
				input(type='radio', name='radio', checked='')
				i.fa.fa-1.fa-square-o
				i.fa.fa-2.fa-check-square-o
				span второй чек
			h3 Пример Select на плагине Select2
				h4 с тегами
				.select2-container
					select.select2-tags.form-control(multiple)
						option angular
						option react
						option vui
						option(disabled) ember
						option backbone
				h4 обычный
				.select2-container
					select.select2
						option angular
						option react
						option vui
						option(disabled) ember
						option backbone
	// Секция  ask-form-title
	section.intermediate
		.container
			.intermediate_title
				h3 Заполните форму и мы бесплатно перезвоним и ответим на ваши вопросы
			.intermediate_wrap
				form#form-file.clearfix
					.file_wrap
						input(type='file' name='field')
					.row
						.intermediate_item.col-lg-3.col-md-4.col-sm-4
							.input_wrap
								i.fa.fa-check
								input(name='name', type='text', placeholder='Имя')
						.intermediate_item.col-lg-3.col-md-4.col-sm-4
							.input_wrap
								i.fa.fa-check
								input(name='email', type='text', placeholder='Почта')
						.intermediate_item.col-lg-3.col-md-4.col-sm-4
							.input_wrap
								i.fa.fa-check
								input(name='phone', type='text', placeholder='Телефон')
						input(type='hidden', name='form_name', value='')
						input(type='hidden', name='form_type', value='normal')
						.intermediate_item.col-lg-3
							input(type='submit', value='Записаться')




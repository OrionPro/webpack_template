extends ../base
block title
	| Index page
block main
	// второй класс у body это анимация на модалке (animated-transition-effects гуглануть или спросить меня, убрав класс вернётся обычная анимация модалки, без изысков)
	body.index.ink-transition
		div
			.loader
				.loader_inner
					include ../../img/preloader.svg
		include ../modal
		// Элемент cd-transition-layer это тоже для прикольной анимации модалки
		.cd-transition-layer
			.bg-layer
		nav(canvas="" class="")
			.mnu_btn
				label(id="nav-button-label")
					#nav-lines
						i.nav-line
						i.nav-line
						i.nav-line
						i.nav-line
		div(canvas='container')
			header(class="header")
				.container
					.header_logo
						a(href="/" class="logo" title="Логотип").
							Ваш Логотип
					nav.header_nav
						ul
							-var links = [{title:'Примеры Кухонь', href:'#'},{title:'Преимущества', href:'#'},{title:'Отзывы', href:'#'},{title:'7 3842 59 61 68', href:'tel:73842596168'}];
							each i in links
								li
									a(href=i.href)= i.title
					.header_modal
						a(data-effect="mfp-zoom-in" data-info="Обратный звонок" href="#popup" class="open-popup-link" title='Вызов стандартного модального окна') Обратный звонок
					.header_modal.last
						a(data-effect="mfp-zoom-in" data-info="Обратный звонок" href="#popup3" class="open-popup-link active" title='Вызов примера модального окна, в виде навигации.') Мобильное меню
					.header_title
						h1
							span ФУНКЦИОНАЛЬНЫЕ
							|  ЛЕНДИНГИ НА ЗАКАЗ
						p для максимального удобства
					.header_bot_txt
						p.sticky Более
							span  400
							|   довольных клиентов за
							span  8 лет
							|  успешной работы!
						p
							include ../../img/svg_circle.html
			// Секция  our_advantages
			section#our_advantages.our_advantages
				.container
					h2 Наши преимущества
					.row
						.our_advantages_item.col-lg-4.col-md-6
							.our_advantages_item_img
								i.fa.fa-users
							h3 Заголовок
							p Индивидуальный подход к каждому клиенту
						.our_advantages_item.col-lg-4.col-md-6
							.our_advantages_item_img
								i.fa.fa-diamond
							h3 Заголовок
							p Неповторимость и практичность каждого проекта мебели
						.our_advantages_item.col-lg-4.col-md-6
							.our_advantages_item_img
								i.fa.fa-list-ol
							h3 Заголовок
							p Многообразие материалов и стилевых решений
						.our_advantages_item.col-lg-4.col-md-6
							.our_advantages_item_img
								i.fa.fa-pencil
							h3 Заголовок
							p Для вас бесплатно: замер, дизайн-проект, доставка и монтаж
						.our_advantages_item.col-lg-4.col-md-6
							.our_advantages_item_img
								i.fa.fa-credit-card-alt
							h3 Заголовок
							p Возможность оформления мебели в кредит
						.our_advantages_item.col-lg-4.col-md-6
							.our_advantages_item_img
								i.fa.fa-wrench
							h3 Заголовок
							p Изготовление мебели только из высококачественных материалов
			// Тест react
			section.react
				.container
					#app
			// Секция main_content
			section.main_content
				.container
					div Пример checkbox
					label.check.noselect
						input(type='checkbox')
						i.fa.fa-1.fa-square-o
						i.fa.fa-2.fa-check-square-o
						span первый чек
					label.check.noselect
						input(type='checkbox')
						i.fa.fa-1.fa-square-o
						i.fa.fa-2.fa-check-square-o
						span второй чек
					div Пример radio button
					label.radio.noselect
						input(type='radio', name='radio')
						i.fa.fa-1.fa-square-o
						i.fa.fa-2.fa-check-square-o
						span первый чек
					label.radio.noselect
						input(type='radio', name='radio', checked='')
						i.fa.fa-1.fa-square-o
						i.fa.fa-2.fa-check-square-o
						span второй чек
					h3 Пример Select на плагине Select2
						h4 с тегами
						.select2-container
							select.select2-tags.form-control(multiple)
								option angular
								option react
								option vui
								option(disabled) ember
								option backbone
						h4 обычный
						.select2-container
							select.select2
								option angular
								option react
								option vui
								option(disabled) ember
								option backbone
			// Секция  ask-form-title
			section.intermediate
				.container
					.intermediate_title
						h3 Заполните форму и мы бесплатно перезвоним и ответим на ваши вопросы
					.intermediate_wrap
						form#form-file.clearfix
							.file_wrap
								input(type='file' name='field')
							.row
								.intermediate_item.col-lg-3.col-md-4.col-sm-4
									.input_wrap
										i.fa.fa-check
										input(name='name', type='text', placeholder='Имя')
								.intermediate_item.col-lg-3.col-md-4.col-sm-4
									.input_wrap
										i.fa.fa-check
										input(name='email', type='text', placeholder='Почта')
								.intermediate_item.col-lg-3.col-md-4.col-sm-4
									.input_wrap
										i.fa.fa-check
										input(name='phone', type='text', placeholder='Телефон')
								input(type='hidden', name='form_name', value='')
								input(type='hidden', name='form_type', value='normal')
								.intermediate_item.col-lg-3
									input(type='submit', value='Записаться')
			// Секция footer
			footer.footer
		div(off-canvas='id-1 left shift')
			nav.header_nav_mobile
				ul.menu
					-var obj1 = [{title:'Преимущества', href:'#'},{title:'Отзывы', href:'#'},{title:'7 38 425 961 68', href:'tel:73842596168'},{title:'Преимущества', href:'#'},{title:'Отзывы', href:'#'},{title:'Примеры', href:'#'}];
					each i in obj1
						li
							a(href=i.href)= i.title
		div(off-canvas='id-2 right push')
		div(off-canvas='id-3 top overlay')
		div(off-canvas='id-4 bottom shift')
		//[if IE 9]>
			<script src="libs/html5shiv/es5-shim.min.js"></script>
			<script src="libs/html5shiv/html5shiv.min.js"></script>
			<script src="libs/html5shiv/html5shiv-printshiv.min.js"></script>`
			<script src="libs/respond/respond.min.js"></script>


